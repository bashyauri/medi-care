FROM richarvey/nginx-php-fpm:8.1

ENV APP_URL=https://med-care.onrender.com
ENV APP_ENV=production
ENV DB_HOST=database.render.com
ENV DB_DATABASE=root
ENV DB_USERNAME=your_database_username
ENV DB_PASSWORD=

COPY . /var/www/html

RUN docker-php-ext-install mysqli pdo_mysql

EXPOSE 80

CMD ["php-fpm", "-F"]
